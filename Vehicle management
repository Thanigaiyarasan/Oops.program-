import java.util.Scanner;

// Base Class
class Vehicle {
String brand;
double price;

void getVehicleDetails(Scanner sc) {
    System.out.print("Enter vehicle brand: ");
    brand = sc.nextLine();
    System.out.print("Enter vehicle price: ");
    price = sc.nextDouble();
    sc.nextLine(); // consume the leftover newline
}

void displayVehicleDetails() {
    System.out.println("Brand: " + brand);
    System.out.println("Price: " + price);
}
}

// Subclass Car
class Car extends Vehicle {
int numberOfDoors;

void getCarDetails(Scanner sc) {
    getVehicleDetails(sc); // reuse parent method
    System.out.print("Enter number of doors: ");
    numberOfDoors = sc.nextInt();
    sc.nextLine();
}

void displayCarDetails() {
    System.out.println("\n--- Car Details ---");
    displayVehicleDetails();
    System.out.println("Number of Doors: " + numberOfDoors);
}
}

// Subclass Bike
class Bike extends Vehicle {
String type; // Sports, Cruiser, etc.

void getBikeDetails(Scanner sc) {
    getVehicleDetails(sc); // reuse parent method
    System.out.print("Enter bike type: ");
    type = sc.nextLine();
}

void displayBikeDetails() {
    System.out.println("\n--- Bike Details ---");
    displayVehicleDetails();
    System.out.println("Bike Type: " + type);
}
}

// Main Class
public class VehicleManagement {
public static void main(String[] args) {
Scanner sc = new Scanner(System.in);

    Car car = new Car();
    Bike bike = new Bike();

    System.out.println("Enter Car Details:");
    car.getCarDetails(sc);

    System.out.println("\nEnter Bike Details:");
    bike.getBikeDetails(sc);

    car.displayCarDetails();
    bike.displayBikeDetails();

    sc.close();
}
}
