import java.util.Scanner;

// Simulating Employee class (normally in another package)
class Employee {
    public String name;       
    protected double salary;  
    private String ssn;         

    public void setDetails(String name, double salary, String ssn) {
        this.name = name;
        this.salary = salary;
        this.ssn = ssn;
    }

    public void display() {
        System.out.println("\n--- Employee Details ---");
        System.out.println("Name   : " + name);
        System.out.println("Salary : " + salary);

        System.out.println("SSN    : " + ssn);
    }
}


public class Main extends Employee {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Main m = new Main();

        System.out.print("Enter Employee Name: ");
        String name = sc.nextLine();

        System.out.print("Enter Salary: ");
        double salary = sc.nextDouble();
        sc.nextLine(); // consume newline

        System.out.print("Enter SSN: ");
        String ssn = sc.nextLine();


        m.setDetails(name, salary, ssn);

        System.out.println("\nAccess from Manager (subclass):");
        System.out.println("Name (public)    : " + m.name);      
        System.out.println("Salary (protected): " + m.salary);   
        // System.out.println("SSN (private)    : " + m.ssn);     


        m.display();

        sc.close();
    }
}
